@model List<CategoryViewModel>

@if (Model.Count() > 0)
{
    <div class="list-group">
        <a href="/lessons"
           class="list-group-item list-group-item-action @(ViewBag.SelectedCategory==null ? "active" : "")">
            Tüm Dersler
        </a>
        @foreach (var category in Model)
        {
            <a asp-area=""
                asp-controller="Lessons"
                asp-action="Index"
                asp-route-categoryurl="@category.Url"
               class="list-group-item list-group-item-action @(ViewBag.SelectedCategory==category.Url ? "active" : "")">
                @category.Name
            </a>
        }
    </div>
}
else
{
    <h6 class="alert alert-danger">Kategori bilgisi bulunamamıştır!</h6>
}