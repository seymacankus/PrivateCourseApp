@model ResetPasswordViewModel

<div class="container m-auto">
    <h3>Şifre Sıfırla</h3>
    <hr />

    <form asp-area="" asp-controller="Account" asp-action="ResetPassword" method="post">
        <input type="hidden" asp-for="Token" />
        <div class="row w-50">
            <div class="col-12 mb-3">
                <label class="form-label" asp-for="Email"></label>
                <input class="form-control" asp-for="Email">
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>
            <div class="col-12 mb-3">
                <label class="form-label" asp-for="Password"></label>
                <input class="form-control" asp-for="Password">
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>
            <div class="col-12 mb-3">
                <label class="form-label" asp-for="RePassword"></label>
                <input class="form-control" asp-for="RePassword">
                <span class="text-danger" asp-validation-for="RePassword"></span>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Şifremi Sıfırla</button>
    </form>

</div>