@model RoleEditViewModel
<h4 class="mt-5">Rol Düzenleme</h4>
<hr />
<form asp-area="Admin"
      asp-controller="Roles"
      asp-action="Edit"
      method="post">
    <div class="row">
        <div class="col-6">
            <div class="row">
                <div class="col">
                    <div class="mb-3">
                        <label class="form-label fs-6" asp-for="Name"></label>
                        <input class="form-control" asp-for="Name">
                        <span class="text-danger" asp-validation-for="Name"></span>
                    </div>
                </div>
            </div>

            <button type="submit" class="btn btn-primary btn-sm">Değişiklikleri Kaydet</button>

        </div>
        <div class="col-6">
            <div class="row">
                <div class="col">
                    <div class="mb-3">
                        <label class="form-label fs-6" asp-for="Description"></label>
                        <input class="form-control" asp-for="Description">
                        <span class="text-danger" asp-validation-for="Description"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>

</form>

@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial");
}